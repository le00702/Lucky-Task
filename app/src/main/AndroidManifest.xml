<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.luckytask"
    xmlns:tools="http://schemas.android.com/tools">

    <queries>
        <package android:name="com.google.android.gms" />
    </queries>

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_luckytask_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_luckytask_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.LuckyTask"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.LuckyTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MockActivity" />
        <activity android:name=".MockDiceActivity" />
        <activity android:name=".MyTasksActivity" />
        <activity android:name=".GroupTasksActivity" />
        <activity android:name=".AddNewTaskActivity" />
        <activity android:name=".EditTaskActivity" />
        <activity android:name=".firestore.RemoteDBActivity" />
    </application>

</manifest>